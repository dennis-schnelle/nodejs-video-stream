{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "sourceMap": false,
        "allowJs": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["@types/node", "@types/jest", "node", "core-js"],
        "allowSyntheticDefaultImports": true,
        "lib": ["es6", "dom", "esnext"],
        "paths": {
            "src/*": ["src/*"],
            "components/*": ["src/components/*"],
            "tests/*": ["tests/*"]
        },
        "baseUrl": "./",
        "jsx": "react"
    },
    "exclude": ["node_modules"],
    "compileOnSave": false
}
